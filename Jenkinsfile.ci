pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    npm install
                '''
            }
        }

        stage('Build Vite App') {
            steps {
                sh '''
                    npm run build
                '''
            }
        }

        stage('Archive Build Artifacts') {
            steps {
                archiveArtifacts artifacts: 'build/**', fingerprint: true
            }
        }
    }

    post {
         success {
            echo 'ğŸš€ CI Deployment successful'
        }
        failure {
            echo 'âŒ CI Deployment failed'
        }
    }
}
